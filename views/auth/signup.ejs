<% include ../includes/head %>
    </head>
    <body>
        <% include ../includes/navigation %>
        <main>
            <% if (errorMessage) { %>
            <div class="alert alert-danger alert-dismissible fade show mt-0" role="alert">
                <strong><%= errorMessage %></strong>.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% } %>
            <div class="jumbotron">
                <form action="/signup" class="form" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                        <label>Pseudo</label>
                        <input 
                        name="pseudo" 
                        type="text" 
                        class="form-control <%= validationErrors.find(e => e.param === 'pseudo') ? 'border border-danger' : '' %>" 
                        required 
                        value="<% if(hasError){ %><%= oldInput.pseudo %> <% } %>">
                    </div>
                    <div class="form-group">
                        <label>E mail</label>
                        <input 
                        name="email" 
                        type="mail" 
                        class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'border border-danger' : '' %>" 
                        required 
                        value="<% if(hasError){ %><%= oldInput.email %> <% } %>">
                    </div>
                    <div class="form-group">
                        <label>Mot de passe</label>
                        <input 
                        name="password" 
                        type="password" 
                        class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'border border-danger' : '' %>" 
                        required
                        value="<% if(hasError){ %><%= oldInput.password %> <% } %>">
                    </div>
                    <div class="form-group">
                        <label>Confirmation de mot de passe</label>
                        <input 
                        name="passwordConfirm" 
                        type="password" 
                        class="form-control <%= validationErrors.find(e => e.param === 'passwordConfirm') ? 'border border-danger' : '' %>" 
                        value="<% if(hasError){ %><%= oldInput.passwordConfirm %> <% } %>">
                    </div>
                    <div class="col-sm-12 text-center mt-5">
                        <button type="submit" class="btn btn-primary"> S'inscrire </button>
                    </div>
                </form>
            </div>
        </main>
        <% include ../includes/footer %>
    </body>
</html>