        <% include ../includes/navigation %>
        <main>
            <div class="jumbotron">
                <form action="/login" class="form" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                        <label>E mail</label>
