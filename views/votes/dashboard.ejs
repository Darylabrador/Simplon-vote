<% include ../includes/head %>
    </head>
    <body>
        <% include ../includes/navigation %>
        <main >
        <% include ../includes/messageFlash %>
            <div class="row no-gutters justify-content-center align-items-center py-5">
                <% if(votes.length == 0) { %>
            
                <div class="d-flex justify-content-center w-100">
                    <h5 class="alert alert-info my-5"> Aucun vote n'est disponible pour le moment ! </h5>
                </div>
            
                <% } else { %>

                    <% votes.forEach(function(vote) { %>

                        <% if(vote.participants.includes(locals.currentUserId)) { %>
                            
                            <div class="col-12 col-md-5 col-lg-3 m-3">
                                <div class="card">
                                    <div class="card-body">
                                        <p class="text-center">
                                            <b><%= vote.subject %></b> <br>
                                            <small>
                                                Créer par
                                                <% if (vote.createdBy != null) { %>
                                                <%= vote.createdBy.login %> <br> 
                                                    <% switch(vote.status) { 
                                                        case 'created': %>
                                                        <span class="waiting"> En attente de participant </span>
                                                        <% break;
                                                        case 'inprogress': %>
                                                        <span class="inprogress"> En cours </span> 
                                                        <% break;
                                                        case 'finished': %>
                                                        <span class="finished"> Fini </span>
                                                        <% break;
                                                    } %>
                                                <% } %>
                                            </small>
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <% if (vote.status == 'inprogress') { %>
                                            <div class="d-flex justify-content-center">
                                                <a class="text-center btn w-75 py-0" href="/dashboard/vote/<%= vote._id %>" style="background: rgba(27, 159, 233, 0.6);"> Voter </a>
                                            </div>
                                        <% } else if (vote.status == 'finished') { %>
                                            <div class="d-flex justify-content-center">
                                                <a href="/dashboard/result/<%= vote._id %>" class="btn w-75 py-0" style="background: rgba(0, 197, 31, 0.6);">Voir le résultat</a>
                                            </div>
                                        <% } else { %> 
                                        <div class="progress">
                                            <% var vot = vote.participants.length/vote.quota*100 %>
                                            <div class="progress-bar" role="progressbar" style="width: <%= vot %>%; background: rgba(160, 115, 0, 0.6);" aria-valuenow="<%= vot %>"
                                                aria-valuemin="0" aria-valuemax="100"> <%= vote.participants.length %> / <%= vote.quota %> Participants 
                                            </div>
                                        </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                        <% } else { %>

                            <div class="col-12 col-md-5 col-lg-3 m-3">
                                <div class="card">
                                    <div class="card-body">
                                        
                                        <% if (vote.createdBy._id == currentUserId) { %>
                                            <p class="text-center">
                                                <b><%= vote.subject %></b>
                                                <br>
                                                <small>
                                                    Créer par moi <br>
                                                    <% switch(vote.status) { 
                                                        case 'created': %>
                                                        <span class="waiting"> En attente de participant </span>
                                                        <% break;
                                                        case 'inprogress': %>
                                                        <span class="inprogress"> En cours </span> 
                                                        <% break;
                                                        case 'finished': %>
                                                        <span class="finished"> Fini </span>
                                                        <% break;
                                                    } %>
                                                </small>
                                            </p>
                                        <% } else { %>
                                            <p class="text-center">
                                                <b><%= vote.subject %></b><br>
                                                <small>
                                                    Créer par
                                                    <% if (vote.createdBy != null) { %>
                                                    <%= vote.createdBy.login %> <br> 
                                                        <% switch(vote.status) { 
                                                            case 'created': %>
                                                            <span class="waiting"> En attente de participant </span>
                                                            <% break;
                                                            case 'inprogress': %>
                                                            <span class="inprogress"> En cours </span> 
                                                            <% break;
                                                            case 'finished': %>
                                                            <span class="finished"> Fini </span>
                                                            <% break;
                                                        } %>
                                                    <% } %>
                                                </small>
                                            </p>
                                        <% } %>
                                    </div>
                                    <div class="card-footer">
                                        <% if (vote.createdBy._id != currentUserId) { %>
                                        <div>
                                            <form class="mx-3" action="/dashboard/vote/enrolled" method="POST">
                                                <input type="hidden" name="voteId" value="<%= vote._id %>">
                                                <input type="hidden" name="userId" value="<%= currentUserId %>">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <button type="submit" class="rounded btn py-0 btn-lg w-100" style="background: rgba(160, 115, 0, 0.6);"> Participer </button>
                                            </form>
                                        </div>
                                        <% } else if (vote.status == 'finished') { %>
                                            <div class="d-flex justify-content-center">
                                                <a href="/dashboard/result/<%= vote._id %>" class="btn w-75 py-0" style="background: rgba(0, 197, 31, 0.6);">Voir le résultat</a>
                                            </div>
                                        <% } else if (vote.status == 'inprogress') { %>
                                            <div class="progress">
                                                <% var vot = vote.participants.length/vote.quota*100 %>
                                                <div class="progress-bar" role="progressbar" style="width: <%= vot %>%; background: rgba(27, 159, 233, 0.6);"
                                                    aria-valuenow="<%= vot %>" aria-valuemin="0" aria-valuemax="100"> <%= vote.participants.length %> /
                                                    <%= vote.quota %> Participants
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div class="progress">
                                                <% var vot = vote.participants.length/vote.quota*100 %>
                                                <div class="progress-bar" role="progressbar" style="width: <%= vot %>%; background: rgba(160, 115, 0, 0.6);"
                                                    aria-valuenow="<%= vot %>" aria-valuemin="0" aria-valuemax="100"> <%= vote.participants.length %> /
                                                    <%= vote.quota %> Participants
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% }); %>
                <% } %>  
            </div>
        </main>

        <div class="d-flex justify-content-center my-3">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <% include ../includes/footer %>
        <% include ../includes/modals %>
        
        <script src="/js/script.js"></script>
    </body>
</html>